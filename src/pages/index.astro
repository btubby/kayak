---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Boat from '../components/Boat.astro'

import BSCC from '../images/bscc.png';
import BRITC from '../images/logo-bc.png';
import SalesWants from '../images/salesAndWants.jpeg';
---

<Layout title="Welcome to Astro mortal.">
	<Boat rotation=90 />
	<Boat rotation=92 />
	<Boat rotation=91 />
	<div class="container">

		<item >
			<div class="kayak-left">
			</div>
		</item>
		<item class="center-page"> 
				<h1>Accidental <span class="text-gradient">Kayaker</span></h1>
				<!-- <p class="instructions">
					To get started, open the directory <code>src/pages</code> in your project.<br />
					<strong>Code Challenge:</strong> Tweak the "Welcome to Astro" message above.
				</p>
				-->
				
				<ul role="list" class="link-card-grid">
					<Card
					href="https://datawookie.dev/blog/2023/05/kayak-specifications/"
					title="DataWookie"
					body="Models, stabilities"
					/>
					<Card
					href="https://stortfordcanoe.weebly.com/"
					title="BSCC kayak club"
					body=""
					image={BSCC.src}
					width="30%"
					/>
					<Card
					href="https://entries.gbcanoemarathon.co.uk/entries"
					title="Upcoming races"
					body=""
					image={BRITC.src}
					width="20%"
					/>

					<Card
					href="https://www.facebook.com/groups/175548469594046"
					title="'Sales and Wants' on Facebook"
					body=""
					image={SalesWants.src}
					width="30%"
					/>
					<Card
					href="https://www.nswatersports.co.uk/blog/2019/11/06/how-to-choose-the-right-kayak-paddles/"
					title="Paddles"
					body="Explained"
					/>
					<Card
					href="https://astro.build/chat/"
					title="The Shed"
					body="Tercel"
					/>
					<Card
					href="https://astro.build/chat/"
					title="The Shed"
					body="Hobby"
					/>
					<Card
					href="https://astro.build/chat/"
					title="The Shed"
					body="Tor"
					/>
					<Card
					href="https://astro.build/chat/"
					title="The Shed"
					body="Epsilon"
					/>
					<Card
					href="https://astro.build/chat/"
					title="The Shed"
					body="Eta"
					/>
					<Card
					href="https://astro.build/chat/"
					title="The Shed"
					body="Zeta"
					/>
				</ul>
				<div>
					By <a href="https://tubby-24c3e.firebaseapp.com/#contact">Ben Tubby</a>
				</div>
		</item>
		<item >
			<div class="kayak-right">
			</div>
		</item>
</div>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 900px;
		max-width: calc(100% - 2rem);
		color: black;
		font-size: 20px;
		line-height: 1.6;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(40ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
	.kayak-left {
		background-image: url("../images/nelo.png"); /* The image used */
		background-color: ffff;
		height: 100%; /* You must set a specified height */
		/* background-position: center; Center the image */
		background-repeat: no-repeat; /* Do not repeat the image */
		width: 166px;
	}
	.kayak-right {
		background-image: url("../images/tercel.png"); /* The image used */
		background-color: ffff;
		height: 100%; /* You must set a specified height */
		/* background-position: center; Center the image */
		background-repeat: no-repeat; /* Do not repeat the image */
		width: 200px;
	}
	.container {
  		display: flex; /* or inline-flex */
		flex-direction: row;
	}
	.center-page {
		text-align: center;
		width: 8100;
	}
	.item {
  		flex-shrink: 3; /* default 1 */
	}		
</style>
